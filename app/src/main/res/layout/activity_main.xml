<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/textpeso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="102dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="63dp"
        android:ems="10"
        android:hint="Digite seu Peso"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/textalt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textresult"
        app:layout_constraintVertical_bias="0.76" />

    <EditText
        android:id="@+id/textalt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="103dp"
        android:layout_marginEnd="99dp"
        android:layout_marginBottom="46dp"
        android:ems="10"
        android:hint="Digite sua Altura"
        android:inputType="numberDecimal"
        android:text="@string/textalt"
        app:layout_constraintBottom_toTopOf="@+id/btncalc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textpeso" />

    <TextView
        android:id="@+id/textresult"
        android:layout_width="184dp"
        android:layout_height="52dp"
        android:layout_marginStart="115dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="115dp"
        android:text="@string/textresult"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btncalc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="236dp"
        android:onClick="Calcular"
        android:text="@string/btncalc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btncal2"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textresult2"
        android:layout_width="180dp"
        android:layout_height="56dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="115dp"
        android:layout_marginBottom="19dp"
        android:text="@string/textresult2"
        app:layout_constraintBottom_toTopOf="@+id/textpeso"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textresult"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btncal2"
        android:layout_width="112dp"
        android:layout_height="47dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="237dp"
        android:onClick="Calcular2"
        android:text="@string/btncalc2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btncalc"
        app:layout_constraintTop_toBottomOf="@+id/textalt"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="186dp"
        android:layout_height="28dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="113dp"
        android:layout_marginBottom="31dp"
        android:fontFamily="sans-serif-black"
        android:text="CALCULADORA IMC"
        android:textColor="#673AB7"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textresult"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>