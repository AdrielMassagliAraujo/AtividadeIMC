<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="Calcular"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btncalc"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_marginStart="145dp"
        android:layout_marginTop="53dp"
        android:layout_marginEnd="146dp"
        android:layout_marginBottom="343dp"
        android:backgroundTint="#00BCD4"
        android:onClick="Calcular"
        android:text="@string/btncalc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textpeso" />

    <TextView
        android:id="@+id/textresult"
        android:layout_width="192dp"
        android:layout_height="50dp"
        android:layout_marginStart="109dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="110dp"
        android:layout_marginBottom="153dp"
        android:backgroundTint="#00020101"
        android:text="@string/textresult"
        app:layout_constraintBottom_toTopOf="@+id/textpeso"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/textalt"
        android:layout_width="116dp"
        android:layout_height="39dp"
        android:layout_marginStart="153dp"
        android:layout_marginTop="89dp"
        android:layout_marginEnd="153dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="#00FFFFFF"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text="@string/textalt"
        app:layout_constraintBottom_toTopOf="@+id/textpeso"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textresult" />

    <EditText
        android:id="@+id/textpeso"
        android:layout_width="118dp"
        android:layout_height="40dp"
        android:layout_marginStart="146dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="147dp"
        android:layout_marginBottom="53dp"
        android:backgroundTint="#00D30F0F"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text="@string/textpeso"
        app:layout_constraintBottom_toTopOf="@+id/btncalc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textalt" />

</androidx.constraintlayout.widget.ConstraintLayout>